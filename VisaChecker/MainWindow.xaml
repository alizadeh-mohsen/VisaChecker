<Window x:Class="VisaChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisaChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Icon="/Visa.png"   FontFamily="Aptos"
  Background="#F4F6FA" FontSize="14"
        KeyDown="Button_Click">
    <Window.Resources>
        <CollectionViewSource x:Key="categoryViewSource"/>
        <CollectionViewSource x:Key="categoryProductsViewSource"
                              Source="{Binding Products, Source={StaticResource categoryViewSource}}"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Content="Company Name"  HorizontalAlignment="Left" Margin="5" Grid.Row="0" Grid.Column="0"/>
        <TextBox x:Name="inputTextBox" HorizontalAlignment="Left" Margin="5"  Width="200" Grid.Row="0" Grid.Column="1"
                 AcceptsReturn="False"/>
        <Button x:Name="searchButton" Content="Search" HorizontalAlignment="Left"  Margin="5" Click="Button_Click"  Width="100"   Grid.Row="0" Grid.Column="2" Background="#FF088CF1" Foreground="Black" IsDefault="True" />

        <DataGrid x:Name="categoryDataGrid" AutoGenerateColumns="False" 
          EnableRowVirtualization="True"
          ItemsSource="{Binding Source={StaticResource categoryViewSource}}"
           RowDetailsVisibilityMode="VisibleWhenSelected" Margin="5" 
          Grid.Row="1" Grid.ColumnSpan="3" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="Name"
                            Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StatusBar Grid.Row="2" Grid.ColumnSpan="3" Background="#2C3E50" Foreground="White">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text=" Items count: " />
                    <TextBlock x:Name="itemCount" Text="0" />
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>